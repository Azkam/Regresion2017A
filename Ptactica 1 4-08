#concepto de funcion 
x<-abs(-2.5)#abs valor absoluto
  #para asignar valores a variables en R se usa una <-
x<-"hola" #Varibale tipo Caracter 
z<-6 #el igual solo funciona en una sola direccion 
ciudad<- "Toluca"
nombres<- c("karla","rodrigo","miguel","samuel")
edad<- c(28,17,49,31)
  #class que tipo de caracter es
class(nombres)
class(edad)

basel<- data.frame(nombres,edad)#se crea una base de datos 
View(basel)#hace tabla de datos 
ls(basel)#ver lista de variables de base 1
basel$edad #para conocer los datos de la variable edad de la basel 

#crear varible sexo con 4 entradas y donde hombre es 1 y mujer 2, 
#la primera entrada es mujer y las otras 3 son hombres
sexo<- c(2,1,1,1)
#generar una nueva base de nombre 2 con 3 variables, nombre edad y sexo
base2<- data.frame(nombres,edad,sexo)
View(base2)
table(base2$sexo)
table(base2$edad)
table(base2$nombres)



